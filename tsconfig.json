{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/date-fns", "@nuxtjs/color-mode"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
